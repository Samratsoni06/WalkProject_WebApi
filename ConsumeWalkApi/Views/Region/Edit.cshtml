@model ConsumeWalkApi.Models.RegoinDTO

<h1>Edit Region</h1>
<hr />

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Code</label>
        <input type="text" class="form-control" asp-for="Code" />
    </div>
    <div class="mt-3">
        <label class="form-label">RegionalImageUrl</label>
        <input type="text" class="form-control" asp-for="RegionalImageUrl" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Update</button>
        <button type="submit" class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Region" asp-action="Delete">Delete</button>
    </div>

</form>